<div class="container">
  <%= form_for @task do |f| %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :name, 'TASK NAME' %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :details, 'TASK DETAILS' %>
        <%= f.text_field :details, class: "form-control" %>
      </div>
    </div>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
