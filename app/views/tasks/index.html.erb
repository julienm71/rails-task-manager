<h1>Tasks Manager</h1>

<h2><%= link_to "Create new task", new_task_path %></h2>
<hr>

<div class="card">
  <ul class="list-group list-group-flush">
    <% @tasks.each do |task| %>
    <li class="list-group-item"><input class="form-check-input" type="checkbox" id="defaultCheck2" <%= "checked" if task.checked %> disabled> <i class="fa fa-angle-right"></i> <%= task.name %> (<%= link_to "More details", task_path(task) %>) <%= link_to "", task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task ?" }, :class => "far fa-trash-alt"%></li>
    <% end %>
  </ul>
</div>
